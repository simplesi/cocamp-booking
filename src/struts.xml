<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<include file="struts-default.xml"></include>
	<constant name="struts.action.excludePattern" value="/_ah/.*"/>	
	
	<package name="default" namespace="/" extends="struts-default">
	
		<interceptors>
			<interceptor name="login" class="uk.org.woodcraft.bookings.auth.LoginInterceptor" />

			<interceptor-stack name="defaultLoginStackWithPrepareParams">
                <interceptor-ref name="exception"/>
                <interceptor-ref name="alias"/>
                <interceptor-ref name="i18n"/>
                <interceptor-ref name="checkbox"/>
                <interceptor-ref name="multiselect"/>
                <interceptor-ref name="params">
                    <param name="excludeParams">dojo\..*,^struts\..*</param>
                </interceptor-ref>
                <interceptor-ref name="login"/>
                <interceptor-ref name="servletConfig"/>
                <interceptor-ref name="prepare"/>
                <interceptor-ref name="chain"/>
                <interceptor-ref name="modelDriven"/>
                <interceptor-ref name="fileUpload"/>
                <interceptor-ref name="staticParams"/>
                <interceptor-ref name="actionMappingParams"/>
                <interceptor-ref name="params">
                    <param name="excludeParams">dojo\..*,^struts\..*</param>
                </interceptor-ref>
                <interceptor-ref name="conversionError"/>
                <interceptor-ref name="validation">
                    <param name="excludeMethods">input,back,cancel,browse</param>
                </interceptor-ref>
                <interceptor-ref name="workflow">
                    <param name="excludeMethods">input,back,cancel,browse</param>
                </interceptor-ref>
            </interceptor-stack>
            
            <!-- For actions not requiring the user to be logged in -->
            <interceptor-stack name="defaultInsecureStackWithPrepareParams">
                <interceptor-ref name="exception"/>
                <interceptor-ref name="alias"/>
                <interceptor-ref name="i18n"/>
                <interceptor-ref name="checkbox"/>
                <interceptor-ref name="multiselect"/>
                <interceptor-ref name="params">
                    <param name="excludeParams">dojo\..*,^struts\..*</param>
                </interceptor-ref>
                <interceptor-ref name="servletConfig"/>
                <interceptor-ref name="prepare"/>
                <interceptor-ref name="chain"/>
                <interceptor-ref name="modelDriven"/>
                <interceptor-ref name="fileUpload"/>
                <interceptor-ref name="staticParams"/>
                <interceptor-ref name="actionMappingParams"/>
                <interceptor-ref name="params">
                    <param name="excludeParams">dojo\..*,^struts\..*</param>
                </interceptor-ref>
                <interceptor-ref name="conversionError"/>
                <interceptor-ref name="validation">
                    <param name="excludeMethods">input,back,cancel,browse</param>
                </interceptor-ref>
                <interceptor-ref name="workflow">
                    <param name="excludeMethods">input,back,cancel,browse</param>
                </interceptor-ref>
            </interceptor-stack>
		</interceptors>
		
		
		<default-interceptor-ref name="defaultLoginStackWithPrepareParams"/>

		<default-action-ref name="index" />
	
	    <global-results>
            <result name="login" type="freemarker">/templates/auth/login.ftl</result>
            <result name="login-success" type="freemarker">/templates/index.ftl</result>
        </global-results>
	
        <action name="index">
			<result type="freemarker">/templates/index.ftl</result>
		</action>
				
		<action name="logout" class="uk.org.woodcraft.bookings.auth.LogoutAction">
			<result type="redirect">/index</result>
		</action>		
				
		<action name="wcfbookings" class="uk.org.woodcraft.bookings.WcfBookingsAction">
			<result>/success.jsp</result>
		</action>
	</package>
	
	<package name="signup" namespace="/signup" extends="default">
		<default-interceptor-ref name="defaultInsecureStackWithPrepareParams"/>
		<default-action-ref name="signup" />
		
		<action name="signup" class="uk.org.woodcraft.bookings.auth.UserAction" method="edit">
			<result name="input" type="freemarker">/templates/auth/signup.ftl</result>
		</action>

		<action name="processSignup" class="uk.org.woodcraft.bookings.auth.UserAction" method="processSignup">
			<result name="input" type="freemarker">/templates/auth/signup.ftl</result>
			<result name="email-confirm" type="redirect">confirmEmail</result>
		</action>
		
		<action name="confirmEmail" class="uk.org.woodcraft.bookings.auth.ConfirmEmailAction">
			<result name="input" type="freemarker">/templates/auth/emailConfirm.ftl</result>
			<result name="success" type="redirect">/index</result>
		</action>
		
		<action name="addOrg" method="edit" class="uk.org.woodcraft.bookings.persistence.OrganisationAction">
			<result name="input" type="freemarker">/templates/datamodel/organisation.ftl</result>
		</action>
		<action name="saveOrg" method="save" class="uk.org.woodcraft.bookings.persistence.OrganisationAction">
			<result name="input" type="freemarker">/templates/datamodel/organisation.ftl</result>
			<result type="redirect">signup</result>
		</action>
		
		<action name="addUnit" method="edit" class="uk.org.woodcraft.bookings.persistence.UnitAction">
			<result name="input" type="freemarker">/templates/datamodel/unit.ftl</result>
		</action>
		<action name="saveUnit" method="save" class="uk.org.woodcraft.bookings.persistence.UnitAction">
			<result name="input" type="freemarker">/templates/datamodel/unit.ftl</result>
			<result name="success" type="redirect">signup</result>
		</action>
		
		
	</package>
	
	<package name="unit" namespace="/unit" extends="default">		
		<action name="listAll" method="listAll" class="uk.org.woodcraft.bookings.persistence.UnitAction">
			<result type="freemarker">/templates/datamodel/unitList.ftl</result>
		</action>
		<action name="list" method="list" class="uk.org.woodcraft.bookings.persistence.UnitAction">
			<result type="freemarker">/templates/datamodel/unitList.ftl</result>
		</action>
		<action name="edit" method="edit" class="uk.org.woodcraft.bookings.persistence.UnitAction">
			<result name="input" type="freemarker">/templates/datamodel/unit.ftl</result>
		</action>
		<action name="saveUnit" method="save" class="uk.org.woodcraft.bookings.persistence.UnitAction">
			<result type="redirect">list</result>
			<result name="input">edit</result>
		</action>
		<action name="delete" method="delete" class="uk.org.woodcraft.bookings.persistence.UnitAction">
			<result type="redirect">list</result>
		</action>
	</package>
	
	<package name="org" namespace="/org" extends="default">		
		<action name="list" method="list" class="uk.org.woodcraft.bookings.persistence.OrganisationAction">
			<result type="freemarker">/templates/datamodel/organisationList.ftl</result>
		</action>
		<action name="edit" method="edit" class="uk.org.woodcraft.bookings.persistence.OrganisationAction">
			<result name="input" type="freemarker">/templates/datamodel/organisation.ftl</result>
		</action>
		<action name="saveOrg" method="save" class="uk.org.woodcraft.bookings.persistence.OrganisationAction">
			<result name="input">edit</result>
			<result type="redirect">list</result>
		</action>
		<action name="delete" method="delete" class="uk.org.woodcraft.bookings.persistence.OrganisationAction">
			<result type="redirect">list</result>
		</action>
	</package>

	<package name="booking" namespace="/booking" extends="default">		
		<action name="list" method="list" class="uk.org.woodcraft.bookings.persistence.BookingAction">
			<result type="freemarker">/templates/datamodel/bookingList.ftl</result>
		</action>
		<action name="edit" method="edit" class="uk.org.woodcraft.bookings.persistence.BookingAction">
			<result name="input" type="freemarker">/templates/datamodel/booking.ftl</result>
		</action>
		<action name="save" method="save" class="uk.org.woodcraft.bookings.persistence.BookingAction">
			<result type="redirect">list</result>
		</action>
		<action name="delete" method="delete" class="uk.org.woodcraft.bookings.persistence.BookingAction">
			<result type="redirect">list</result>
		</action>
	</package>
	
	<!--  THIS IS INSECURE! -->
	<package name="dev" namespace="/developer" extends="default">
		<default-interceptor-ref name="defaultInsecureStackWithPrepareParams"/>
		
		<action name="createtestdata" method="setUp" class="uk.org.woodcraft.bookings.admin.CreateTestDataAction">
			<result>/success.jsp</result>
		</action>	
	</package>
	
</struts>